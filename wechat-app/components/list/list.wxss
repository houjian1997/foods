/* components/list/list.wxss */
.food-dl{
    width:100%;
    padding:10rpx 30rpx;
    box-sizing:border-box;
    display:flex;
}

.food-dt{
    width:180rpx;
    height:180rpx;
}

.food-dt .food-img{
    width:180rpx;
    height:180rpx;
}

.food-dd{
    width:490rpx;
    display:flex;
    flex-direction:column;
    padding:22rpx 20rpx;
    box-sizing:border-box;
}

.title-text{
    display:block;
    width:490rpx;
    height:32rpx;
    font-size:25rpx;
    line-height:30rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    margin-bottom:10rpx;
}

.tags-text{
    display:block;
    width:392rpx;
    height:60rpx;
    font-size:20rpx;
    overflow:hidden;
    margin-bottom:10rpx;
}

.ingredients-text{
    display:block;
    width:392rpx;
    height:60rpx;
    font-size:20rpx;
    overflow:hidden;
}