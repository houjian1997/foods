<!-- pages/home/home.wxml -->
<view class="swiper-view">
    <swiper 
    indicator-dots="{{indicatorDots}}" 
    autoplay="{{autoplay}}" 
    interval="{{interval}}" 
    duration="{{duration}}" 
    class="swiper"
    >
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image" style="width:100%;height:300rpx" />
            </swiper-item>
        </block>
    </swiper>
</view>